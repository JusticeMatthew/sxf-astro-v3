{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "$/assets/*": ["src/assets/*"],
      "$/styles/*": ["src/styles/*"],
      "$/layouts/*": ["src/layouts/*"],
      "$/constants/*": ["src/constants/*"],
      "$/components/*": ["src/components/*"],
      "$/atoms/*": ["src/components/atoms/*"],
      "$/molecules/*": ["src/components/molecules/*"],
      "$/sections/*": ["src/components/sections/*"]
    }
  }
}
